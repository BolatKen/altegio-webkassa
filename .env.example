# Altegio-Webkassa Integration - Environment Variables

# ==========================================
# DATABASE SETTINGS
# ==========================================
POSTGRES_DB=altegio_webkassa_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here

# ==========================================
# APPLICATION SETTINGS
# ==========================================
DEBUG=False
LOG_LEVEL=INFO
SECRET_KEY=your_super_secret_key_here_minimum_32_characters

# ==========================================
# ALTEGIO API SETTINGS
# ==========================================
ALTEGIO_WEBHOOK_SECRET=your_altegio_webhook_secret
ALTEGIO_API_URL=https://api.alteg.io
ALTEGIO_AUTH_TOKEN=your_altegio_auth_token
ALTEGIO_USER_ID=your_altegio_user_id

# ==========================================
# WEBKASSA API SETTINGS
# ==========================================
WEBKASSA_API_URL=https://api.webkassa.kz
WEBKASSA_CASHBOX_ID=your_webkassa_cashbox_id

# ==========================================
# WEBKASSA AUTO-UPDATE SETTINGS
# ==========================================
# Credentials для автоматического обновления API ключа
WEBKASSA_LOGIN=your_webkassa_login
WEBKASSA_PASSWORD=your_webkassa_password
WEBKASSA_AUTH_URL=https://api.webkassa.kz/api/Authorize

# ==========================================
# PRODUCTION SETTINGS (Optional)
# ==========================================
# SSL/TLS settings for production
# SSL_CERT_PATH=/etc/ssl/certs/your_domain.crt
# SSL_KEY_PATH=/etc/ssl/private/your_domain.key

# Domain settings for production
# DOMAIN_NAME=your-domain.com

# Email settings for notifications (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_email_password
# NOTIFICATION_EMAIL=admin@your-domain.com
